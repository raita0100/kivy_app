MainWidgetSection:
<MainWidgetSection>:
    background_color: (114/255, 143/255, 206/255, 1)
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "assets/images/logo_1-2.png"
    rows: 7
    cols: 1
    spacing: "20dp"

    Label:
        size_hint: 1, .3
        canvas.before:
            Color:
                rgba: 166/255, 172/255, 175/255, .5
            Rectangle:
                pos: self.pos
                size: self.size

        text: 'USER'
        color: 23/255, 32/255, 42/255, 1
        font_size: 30

    UserSection:
        id: usersec
        size_hint: 1, .6
        Label:
            canvas.before:
                Color:
                    rgba: 183/255, 162/255, 229/255, .7
                Rectangle:
                    pos: self.pos
                    size: self.size

            text: 'From user'
            color: 10/255, 10/255, 10/255, 1
            font_size: 20
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]

    Label:
        size_hint: 1, .3
        canvas.before:
            Color:
                rgba: 166/255, 172/255, 175/255, .5
            Rectangle:
                pos: self.pos
                size: self.size

        text: 'BOT'
        color: 23/255, 32/255, 42/255, 1
        font_size: 30

    BotSection:
        id: botsec
        size_hint: 1, 1.5
        Label:
            canvas.before:
                Color:
                    rgb: 233/255, 233/255, 233/255
                Rectangle:
                    pos: self.pos
                    size: self.size

            text: 'I am bot'
            color: 44/255, 45/255, 45/255, 1
            font_size: 20
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]


    OparationSection:
        id: opsec

    InformationSection:
        id: infosec


<UserSection>:

<BotSection>:

<OparationSection>:
    orientation: 'horizontal'
    spacing: "10dp"
    size_hint: 1, .3
    Button:
        text: "Start"
        font_size: 25
        #background_color: (168/255, 176/255, 248/255, 1)
        background_color: (0,0,0,0)
        background_normal: ''
        canvas.before:
            Color:
                rgba: (168/255, 176/255, 248/255, 1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [20]
        on_release: self.parent.start_session()

    Button:
        #text: "Record"
        text:''
        id: 'record'
        #font_size: 25
        pos_hint: {'center_x':1}
        #background_color: (99/255, 252/255, 0/255, 1)
        background_color: (0,0,0,0)
        background_normal: ''
        canvas.before:
            Color:
                rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
            RoundedRectangle:
                pos: self.pos
                size: self.size
                #radius: [20]
                source: "assets/images/voice.png" if self.state=='normal' else "assets/images/voice_on.png"
        on_release: self.parent.record()

    Button:
        text: "End"
        font_size: 25
        #background_color: (230/255, 78/255, 200/255, 1)
        background_color: (0,0,0,0)
        background_normal: ''
        canvas.before:
            Color:
                rgba: (230/255, 78/255, 200/255, 1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [20]
        on_release: self.parent.end_conversation()

<InformationSection>
    orientation: 'horizontal'
    size_hint: 1, .3
    spacing: "20dp"
    Button:
        text: 'copy_phone'
        background_color: (0,0,0,0)
        background_normal: ''
        canvas.before:
            Color:
                rgba: (30/255, 178/255, 50/255, 1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
            RoundedRectangle:
                pos: self.pos
                size: self.size
                #radius: [20]
        on_release: self.parent.copy_phone('9886497255')

    Button:
        text: 'copy mail'
        background_color: (0,0,0,0)
        background_normal: ''
        canvas.before:
            Color:
                rgba: (220/255, 12/255, 10/255, 1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
            RoundedRectangle:
                pos: self.pos
                size: self.size
                #radius: [20]
        on_release: self.parent.copy_mail('ssmcpharmacology@gmail.com')